<p style="color: green"><%= notice %></p>

<%= render @pizza %>

<div>
  <%= link_to "Edit this pizza", edit_pizza_path(@pizza) %> |
  <%= link_to "Back to pizzas", pizzas_path %>

  <%= button_to "Destroy this pizza", @pizza, method: :delete %>
  <%= form_with(model: @line_item) do |form| %>
    <%= form.hidden_field :pizza_id, value: @pizza.id %>
    <div>
      <%= form.submit 'Add to Card' %>
    </div>
  <% end %>
</div>
